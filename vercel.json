{
    "buildCommand": "pnpm build",
    "outputDirectory": "demo/dist",
    "framework": null,
    "installCommand": "pnpm install",
    "devCommand": "cd demo && pnpm run start",
    "functions": {
        "runtime": "nodejs20.x"
    },
    "build": {
        "env": {
            "NODE_VERSION": "20"
        }
    },
    "rewrites": [
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ],
    "headers": [
        {
            "source": "/(.*)",
            "headers": [
                {
                    "key": "X-Content-Type-Options",
                    "value": "nosniff"
                },
                {
                    "key": "X-Frame-Options",
                    "value": "DENY"
                },
                {
                    "key": "X-XSS-Protection",
                    "value": "1; mode=block"
                }
            ]
        }
    ]
}